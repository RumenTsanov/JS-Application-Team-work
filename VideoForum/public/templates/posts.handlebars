<div id="container-posts" class="col-xs-4 pull-left">
    <div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Posts</h3>
    </div>

    <div id="posts" class="panel-body">
        {{#each data.posts}}
        <div class="post">
            <div><h3><a class="post-title" href="#/posts/{{id}}">{{title}}</a></h3>
            </div>
        </div>
        {{/each}}

        <form class="navbar-form navbar-left" role="search">
            <h4>Create new Post:</h4>
            <div class="input-group">
            <input id="input-add-post" class="post-title form-control" placeholder="Post Title" />
            <span class="input-group-btn">
                <button id="btn-add-post" class="btn btn-success" type="submit">Add</button>
            </span>
            </div>
        </form>
    </div>
    
    </div>
</div>
